<h2>Track Notes:</h2>

<% if notes.length > 0 %>
    <table>
        <thead>
            <th>User</th>
            <th>Comment</th>
            <th></th>
        </thead>
        <tbody>
            <% notes.each do |note| %>
                <tr>
                    <td><%= note.user.email %></td>
                    <td><%= note.body %></td>
                    <% if note.user.id == current_user.id %>
                        <td>
                            <form action="<%= note_url(note.id) %>" method="post">
                                <input type="hidden" name="_method" value="DELETE">
                                <input 
                                    type="hidden" 
                                    name="authenticity_token"
                                    value="<%= form_authenticity_token %>">
                                <input type="submit" value="Delete Note" class="action">
                            </form>
                        </td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>