<form action="/tweets" method="POST" class="tweet-compose">
<h2>New Tweet!</h2>
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]" placeholder="What's on your tiny mind?"></textarea>
    <strong class="chars-left">140 chars remain</strong>
  </label>
  <br>

  <label>
    Mention
    <select name="tweet[mentioned_user_ids][]">
      <option selected disabled>Mention a User...</option>
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% end %>
    </select>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
