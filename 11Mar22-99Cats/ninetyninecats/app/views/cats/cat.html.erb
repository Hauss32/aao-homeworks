<h1>About <%= @cat.name %></h1>

<table>
    <tr>
        <th>Attribute</th>
        <th>Value</th>
    </tr>
    <tr>
        <td>Birth Date:</td>
        <td><%= @cat.birth_date %></td>
    </tr>
    <tr>
        <td>Age:</td>
        <td><%= @cat.age %></td>
    </tr>
    <tr>
        <td>Sex:</td>
        <td><%= @cat.sex %></td>
    </tr>
    <tr>
        <td>Color:</td>
        <td><%= @cat.color %></td>
    </tr>
    <tr>
        <td>Description:</td>
        <td><%= @cat.description %></td>
    </tr>
</table>

<% if @is_owner %>
<%= link_to 'Edit Cat', edit_cat_url(@cat), class: 'action', id: 'cat_edit' %>
<% end %>

<h2>Rental Requests:</h2>
<table>
    <tr>
        <th>Start Date:</th>
        <th>End Date:</th>
        <th>Status:</th>
        <th>Approve:</th>
        <th>Deny:</th>
    </tr>

    <% @rental_requests.each do |req| %>
        <tr>
            <td><%= req.start_date%></td>
            <td><%= req.end_date%></td>
            <td><%= req.status%></td>

            <% if @is_owner %>
            <td class="approve"><%= req.status == 'PENDING' ? (link_to 'Approve', 
                approve_rental_request_url(req)) : '' %></td>
            <td class="deny"><%= req.status == 'PENDING' ? (link_to 'Deny', 
                deny_rental_request_url(req)) : '' %></td>
            <% else %>
                <td></td>
                <td></td>
            <% end %>
            
        </tr>
    <% end %>
</table>
